@model Sough.Models.Voiture

@{
    ViewBag.Title = "Delete";
    var culture = Sough.GererLang.currentLang;    
}
@Styles.Render("~/Content/popey-" + culture)

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Voiture</legend>
    <div class="display-field" style="margin-bottom:205px;">
        <div class="ppy" id="ppy1">
            <!-- style="float:right;"-->
            <ul class="ppy-imglist">
                <li>
                    <a href="@Url.Action("GetAdImageByName", "Voiture",
                            routeValues: new { id = Model.Id,n=1 })">
                        <img src="@Url.Action("GetAdImageByName", "Voiture",
                                    routeValues: new { id = Model.Id, n = 1 })"
                             alt="..." />
                    </a>
                    <span class="ppy-extcaption">
                    </span>
                </li>
                <li style="display:none;">
                    <a href="@Url.Action("GetAdImageByName", "Voiture",
                             routeValues: new { id = Model.Id, n = 2 })">
                        <img src="@Url.Action("GetAdImageByName", "Voiture",
                               routeValues: new { id = Model.Id, n = 2 })"
                             alt="..." hidden />
                    </a>
                    <span class="ppy-extcaption">
                    </span>
                </li>
                <li style="display:none;">
                    <a href="@Url.Action("GetAdImageByName", "Voiture",
                                    routeValues: new { id = Model.Id, n = 3 })">
                        <img src="@Url.Action("GetAdImageByName", "Voiture",
                                   routeValues: new { id = Model.Id, n = 3 })"
                             alt="..." hidden />
                    </a>
                    <span class="ppy-extcaption">
                    </span>
                </li>
                <li style="display:none;">
                    <a href="@Url.Action("GetAdImageByName", "Voiture",
                                routeValues: new { id = Model.Id, n = 4 })">
                        <img src="@Url.Action("GetAdImageByName", "Voiture",
                                   routeValues: new { id = Model.Id, n = 4 })"
                             alt="..." hidden />
                    </a>
                    <span class="ppy-extcaption">
                    </span>
                </li>


            </ul>
            <div class="ppy-outer">
                <div class="ppy-stage">
                    <div class="ppy-nav">
                        <a class="ppy-prev" title="Previous image">Previous image</a>
                        <a class="ppy-switch-enlarge" title="Enlarge">Enlarge</a>
                        <a class="ppy-switch-compact" title="Close">Close</a>
                        <a class="ppy-next" title="Next image">Next image</a>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.prix)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.marque)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.Modele)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.ville)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.kilometrage)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.carburant)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.BoiteDeVitesse)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.trader_name)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.email)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.phone)
    </div>
</fieldset>
<form method="post" action="~/Voiture/DeleteConfirmed">
    @Html.AntiForgeryToken()
    <input name="key" type="hidden" value="@Model.Id" />
    <input name="why" type="hidden" value="@ViewBag.why" />
    <p>
        <input type="submit" class="btn-default" value="مسح" /> 
    </p>
</form>

@section Scripts{
@Scripts.Render("~/bundles/popey-" + culture)
}