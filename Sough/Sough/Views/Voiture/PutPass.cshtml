<style>
    .panel-footer {
        height: 47px;
    }

    .f-pass {
        float: left;
        position: relative;
    }

        .f-pass > a {
            font-size: 17px;
            color: #4169e1;
            font-weight: bold;
        }

    .cancel {
        float: right;
        position: relative;
    }

        .cancel > a {
            font-size: 17px;
            color: #4169e1;
            font-weight: bold;
        }

        .cancel > i {
            color: #ff0000;
        }

    .btn-default {
        width: 300px;
        font-weight: 700;
    }

    .t-text {
        font-weight: bold;
    }
</style>

@if (ViewBag.operation == "ok")
{
    <div class="row">
        <div class="col-md-3 hidden-sm hidden-xs"></div>

        <div class="col-md-6 col-sm-12">
            <div class="col-md-10 col-sm-10">
                <div class="alert alert-info" role="alert">

                    <div class="div-icon-info">
                        <i class="@Sough.App_Code.Ticons.ok" aria-hidden="true"></i>
                        <span class="t-text">
                            تم الحذف بنجاح
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 hidden-sm hidden-xs"></div>
    </div>

}
else
{
    if (ViewBag.err == "err1")
    {
        <div class="row">
            <div class="col-md-3 hidden-sm hidden-xs"></div>

            <div class="col-md-6 col-sm-12">
                <div class="col-md-10 col-sm-10">
                    <div class="alert alert-danger" role="alert">

                        <div class="div-icon-info">
                            <i class="@Sough.App_Code.Ticons.attention" aria-hidden="true"></i>
                            <span class="t-text">
                                خطأ في البيانات
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 hidden-sm hidden-xs"></div>
        </div>
    }
    else if (ViewBag.err == "err2")
    {
        <div class="row">
            <div class="col-md-3 hidden-sm hidden-xs"></div>

            <div class="col-md-6 col-sm-12">
                <div class="col-md-10 col-sm-10">
                    <div class="alert alert-danger" role="alert">

                        <div class="div-icon-info">
                            <i class="@Sough.App_Code.Ticons.attention" aria-hidden="true"></i>
                            <span class="t-text">
                                كلمة المرور غير صحيحة
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 hidden-sm hidden-xs"></div>
        </div>

    }


    <div class="row">
        <div class="col-md-3 col-sm-2 hidden-xs"></div>
        <div class="col-md-6 col-sm-8">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-10 col-sm-12">
                <div class="panel panel-info">

                    <div class="panel-body">
    
                        @if (ViewBag.op == "del") {
                            <div class="text-center">
                                <h3>حذف اعلانك</h3>
                            </div>
                            
                            
                            
            <form id="loginform" method="post" action="~/Voiture/Delete" class="form-horizontal" role="form">

                @Html.AntiForgeryToken()

                <input name="key" type="hidden" value="@ViewBag.Key" />

                <div class="input-group">
                    <div class="div-radio">
                        <input type="radio" name="why" value="buy from toujjar" required> تم البيع عن طريق تجار
                    </div>
                    <div class="div-radio">
                        <input type="radio" name="why" value="buy from another"> تم البيع عن طريق أخرى
                    </div>
                    <div class="div-radio">
                        <input type="radio" name="why" value="no buying"> لم أنجح في البيع هذه المرة
                    </div>
                    <div class="div-radio">
                        <input type="radio" name="why" value="no want to buy"> لم أعد أريد البيع
                    </div>
                    <div class="div-radio">
                        <input type="radio" name="why" value="other"> أسباب أخرى
                    </div>
                </div>

                <div style="margin-bottom: 14px; margin-top: 25px; width: 300px;" class="input-group">
                    <span class="input-group-addon"><i class="@Sough.App_Code.Ticons.ilock"></i></span>
                    <input id="login-password" type="password" class="form-control" name="password" placeholder="كلمة المرور" required>
                </div>
                <div style="margin-top:10px" class="input-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <button class="btn btn-default" type="submit">
                            <i class="@Sough.App_Code.Ticons.ikey"></i> ارسال</button>
                    </div>
                </div>

            </form>
            }
            else if (ViewBag.op == "edit")
            {
                <div class="text-center">
                                <h3>ادارة اعلانك</h3>
                            </div>

            <form id="loginform" method="post" action="~/Voiture/Edite" class="form-horizontal" role="form">

                @Html.AntiForgeryToken()

                <input name="key" type="hidden" value="@ViewBag.Key" />
               
                <div class="row">
                    <div class="col-md-1 col-sm-1"></div>
                    <div class="col-md-10 col-sm-10">
                        <div style="margin-bottom: 14px; margin-top: 25px;" class="input-group">
                            <span class="input-group-addon"><i class="@Sough.App_Code.Ticons.ilock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="password" placeholder="كلمة المرور" required>
                        </div>
                        <div style="display:block;" class="input-group">
                            <!-- Button -->
                            <div class="col-sm-12 controls">
                                <button class="btn btn-default" type="submit" style="width:inherit;">
                                    <i class="@Sough.App_Code.Ticons.ikey"></i> ارسال
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-1"></div>

                    </div>
            </form>
            
                        }
                    </div>
                    <div class="panel-footer">
                        <div class="f-pass"><a href="#">نسيت كلمة المرور؟</a></div>
                        <div class="cancel"><i class="fa fa-ban" aria-hidden="true"></i> <a href="#">الغاء العملية</a></div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-2 hidden-xs"></div>
    </div>

}
