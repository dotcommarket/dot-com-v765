@model List<Sough.Models.Voiture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-bordered">
    <tr>
        <th>
            prix
        </th>
        <th>
            marque
        </th>
        <th>
            modele
        </th>
        <th>
            ville
        </th>
        <th>
            kilometrage
        </th>
        <th>
            carburant
        </th>
        <th>
            BoiteDeVitesse
        </th>
        
        <th>
            phone
        </th>
        <th>
            temps
        </th>
        <th>
            color
        </th>
        <th>
            shape
        </th>
        <th>
            N/O
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modele)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kilometrage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carburant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoiteDeVitesse)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.temps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.car_shape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstNeuf)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id}) |
                @Html.ActionLink("show", "ShowAds", new { _id = item.Id})
            </td>
        </tr>
        @*<tr>
            <td>
                @Html.ActionLink("DeleteAll", "DeleteAll")
            </td>
        </tr>*@
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/js")
}












